{
	"apiVersion": "v1",
	"kind": "Pod",
	"metadata": {
		"name": "kafka",
		"labels": {
			"name": "kafka-d"
		}
	},
	"spec": {
		"containers": [{
			"name": "zookeeper-coordination-service",
			"image": "docker.io/bzcareer/docker-zookeeper",
			"ports": [{
				"containerPort": 2181
			}, {
				"containerPort": 2888
			}, {
				"containerPort": 3888
			}]
		}, {
			"name": "kakfa-messaging-service",
			"image": "docker.io/bzcareer/docker-kafka",
			"env": [{
				"name": "ZK_KAFKA_URLS",
				"value": "172.30.165.151:2181"
			}, {
				"name": "KF_ID",
				"value": "1"
			}],
			"ports": [{
				"containerPort": 9092
			}]
		}]
	}
}
