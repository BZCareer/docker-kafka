{
	"apiVersion": "v1",
	"kind": "Pod",
	"metadata": {
		"name": "kafka",
		"labels": {
			"name": "kafka-node"
		}
	},
	"spec": {
		"containers": [{
			"name": "zookeeper-coordination-service",
			"image": "docker.io/bzcareer/docker-zookeeper",
			"env": [{
					"name": "ZK_ID",
					"value": "1"
			}],
			"ports": [{
				"containerPort": 2181
			}, {
				"containerPort": 2888
			}, {
				"containerPort": 3888
			}]
		},{
			"name": "kakfa-messaging-service",
			"image": "docker.io/bzcareer/docker-kafka",
			"ports": [{
				"containerPort": 9092
			}]
		}]
	}
}
